    .container
        .header__top
            select
                option(selected) Санкт-Петербург
                option(value="1") Москва
                option(value="2") Тверь
                option(value="3") Мурманск
            include ./../../bem-blocks/nav/nav.pug
            .contacts 
                a(href="tel:84957305300") 8 495 730 53 00
